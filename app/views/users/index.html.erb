<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class="container px-5 px-sm-0">
    <h1 class="heading-custom" data-en="All Users">ユーザー一覧</h1>
    <div class="row">
      <div class="col-md-3">
        <%= render 'users/userinfo', user: @user %>
      </div>
      <div class="col-md-9">
        <p></p>
        <section class="all-users list-back mt-3">
        <h3 class="h-min">Users</h3>
        <table class="table text-center">
          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "user.png", size: '50x50' %></td>
              <td class="align-middle"><%= link_to user.name, user_path(user.id) %></td>
              <td class="align-middle"><%= link_to @user.games.count, user_path(user) %> 件</td>
              <td class="align-middle"><%= link_to '詳細', user_path(user.id), class: 'btn btn-secondary' %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</main>
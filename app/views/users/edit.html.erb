<main>
  <p id="notice"><%= flash[:notice] %></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2 class="font-jp">プロフィール編集</h2>
          <% if @user.errors.any? %>
            <h3>
            <%= @user.errors.count %>errors prohibited this obj from being saved:
            </h3>
            <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          <% end %>

          <%= form_with model: @user, local:true do |f| %>
            <div class="form-group">
              <label for="user_name">ユーザー名</label>
              <%= f.text_field :name, autofocus: true, class: 'form-control'%>
            </div>
            <div class="custom-file mb-3">
              <input type="file" class="custom-file-input" id="customFile">
              <label class="custom-file-label" for="customFile" data-browse="選択">ファイルを選択...</label>
            </div>
            <div class="form-group">
              <label for="user_Introduction">自己紹介</label>
              <%= f.text_area :introduction, autofocus: true, class: 'form-control'%>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-block btn-dark">変更内容を保存</button>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</main>